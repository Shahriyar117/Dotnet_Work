@model Employee_Directory.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="bg-image bg_image1 rounded d-flex align-items-center justify-content-center m-0 p-5 text-white" 
 <div class="container m-5 justify-content-center">
     <div class="text-primary border border-3 rounded-3 border-primary p-5 bg-transparent">
        <form method="post">
            <div class="text-center mb-5 bg-primary rounded-pill">
                <h3><strong>Login</strong></h3>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Email"></label>
                <input asp-for="Email" id="floatinginput" class="form-control" placeholder = "Enter Email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" placeholder = "Enter Password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-5">
                <div class="custom-control custom-checkbox">
                    <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
                    <label class="custom-control-label" asp-for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
                </div>

            </div>
            <div class="text-center position-relative bottom-0 start-50 translate-middle-x bg-primary rounded-pill w-50">
              <button type="submit" class="btn">Login</button>
            </div>
        </form>
      </div>
   </div>
 </div>


