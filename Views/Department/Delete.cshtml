@model EmployeeDirectoryProject.ViewModels.DepartmentViewModel
@{
    ViewData["Title"] = "Delete";
}


<div>
    <h3>Delete Department</h3>
    <p class="text-danger">Are you sure,you want to delete this?</p>
</div><hr />
<div class="row">
   <div class="col-md-8 bg-white m-2">
     <dl class="row">
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.DepartmentName)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.DepartmentName)
        </dd>       
    </dl>
    <div class="text-end m-2">
        <form asp-action="Delete" >
            <input type="hidden" asp-for="DepartmentID" />
            <button type="submit" asp-action="Delete" class="btn btn-danger text-white">Delete</button> 
            <div class="btn btn-dark text-white"> 
                 @Html.ActionLink("Cancel","Index","Department", new{@class="text-white"}) 
            </div>
        </form>                
     </div>    
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
