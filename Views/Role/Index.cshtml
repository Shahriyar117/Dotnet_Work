@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Index";
}
<div class="text-center bg-dark text-white mt-2 p-2">
    <h3>Roles</h3>
</div><hr />
<div class="container p-3">
   <div class="align-items-center justify-content-center">
    <div class=" row">
        <div class="text-center">
            <div class="col-md-12 border border-2 border-dark p-2 bg-white">
                <div class="border border-2 border-white bg-primary text-white text-center">
                    <h3>List of Roles</h3>
                </div><br />
                <div class="border border-2 border-dark bg-dark text-light text-center">
                    <a asp-controller="Role" asp-action="Create" class="btn text-white">
                   <strong><i class="bi bi-plus-circle"></i> &nbsp;Insert</strong>
			    </a>
                </div><br />
                <table class="table table-hover table-bordered table-striped table-condensed">
                    <thead>
                        <tr class="link-dark bg-primary">
                            <th>
                                Role Name
                            </th>
                            
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model) 
                    {
                        <tr class="bg-white">
                            <td>
                                @item.Name
                            </td>
                            
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil-square"></i>Edit</a>
                            </td>
                        </tr>
                   }
                    </tbody>
                </table>
            </div>      
        </div>
    </div>
    </div>
</div>




