@model EmployeeDirectoryProject.ViewModel.EditRoleViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="p-2">
    <h3>Edit Role</h3>
</div><hr />
<input type="hidden" asp-for="Id" />
<div class="align-items-start justify-content-center">
<div class="row m-2">
    <div class="col-md-6 bg-white p-2">
        <form method="post">
            <div class="form-group row m-1 bg-white">
                <label asp-for="RoleName" class="col-sm-4 text-dark">Role</label>
                <div class="col-sm-8">
                <input asp-for="RoleName" class="form-control form-control-sm m-0" placeholder = " Enter Department Name">
                <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>
            <div class="text-end m-2">
                <button type="submit" class="btn btn-primary text-white">Update</button>
                <div class="btn btn-dark text-white"> 
                       @Html.ActionLink("Delete","Delete","Role", new{@class="text-white",id=Model.Id})
                </div>
                <div class="btn btn-dark text-white"> 
                    @Html.ActionLink("Cancel","Index","Role", new{@class="text-white"})
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <div class="card border border-2 border-primary">
                <div class="card-header text-white bg-primary">
                    <h3>Users in this role</h3>
                </div>
                <div class="card-body">
                    <ul>
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <li class="card-title">@user</li>
                        }
                    }
                    else
                    {
                        <li class="card-title">None at the moment</li>
                    }
                    </ul>
                </div>
                <div class="card-footer">
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-dark" style="width:auto">Add Users</a>
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-dark" style="width:auto">Remove Users</a>
                </div>
            </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

