@model EmployeeDirectoryProject.ViewModel.EditRoleViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="p-2">
    <h3>Delete Role</h3>
</div><hr />
<input type="hidden" asp-for="Id" />
<div class="row m-2">
    <div class="col-md-6 bg-white p-2">
        <dl class="row">
            <dt class = "col-sm-4">
                Role Name
            </dt>
            <dd class = "col-sm-8">
                Name
            </dd>       
        </dl>
        <div class="text-end m-2">
            <form asp-action="Delete" >
                <input type="hidden" asp-for="Id" />
                <button type="submit" asp-action="Delete" class="btn btn-danger text-white">Delete</button> 
                <div class="btn btn-dark text-white"> 
                     @Html.ActionLink("Cancel","Index","Role", new{@class="text-white"}) 
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card border border-2 border-primary">
            <div class="card-header text-white bg-primary">
                <h3>Users in this role</h3>
            </div>
            <div class="card-body">
                <ul>
                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <li class="card-title">@user</li>
                    }
                }
                else
                {
                    <li class="card-title">None at the moment</li>
                }
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}