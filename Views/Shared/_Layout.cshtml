<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeeDirectoryProject</title>
    <link rel="stylesheet" href="~/css/bootswatch.css" asp-append-version="true" />
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EmployeeDirectoryProject.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>
<body>
    <header>
       <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
          <div class="container-fluid">
            <a class="navbar-brand ms-4" href="#"><h3>employeeDriectory</h3></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">             
                <ul class="navbar-nav flex-grow-1">                       
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Index"><i class="bi bi-house-door"></i>Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Administrator" asp-action="Login"><i class="bi bi-door-open"></i>Administrator</a>
                    </li>
                </ul>                    
            </div>
          </div>
        </nav>
    </header>
    @if (User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
    {
      <div class="row h-100 w-100">
        <div class=" d-flex col-3">
          <div class="col-sm-2 bg-primary left_nav_bar">
              @*<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColapse02" aria-controls="navbarColapse02" aria-expanded="false" aria-label="Toggle navigation">
                 <span class="navbar-toggler-icon"></span>
              </button>*@
          </div>
          <div class=" col-sm-10 bg-white">
              <nav class="navbar navbar-expand-lg navbar-dark " >
                <div class="container justify-content-start" >
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColapse03" aria-controls="navbarColapse03" aria-expanded="false" aria-label="Toggle navigation">
                       <span class="navbar-toggler-icon "></span>
                    </button>
                    <div class="collapse navbar-collapse text-dark" id="navbarColapse03">
                        <ul class="navbar-nav d-flex-start flex-column">
                            <li class="container-fluid text-center">
                                <a class="navbar-brand" href="#">
                                    <img src="~/images/Shahriyar.jpeg" alt="Avatar Logo" class=" rounded-circle w-50 vh-25"> 
                                </a>
                            </li><hr class="text-secondary"/>
                            <li class="nav-item p-2 ">
                                <a class="nav-link text-dark" asp-action="Index" asp-controller="Home">
                                    <i class="bi bi-house-door"></i>Home</a>
                            </li>
                            <li class="nav-item p-2 ">
                                <a class="nav-link text-dark" asp-action="Index" asp-controller="Employee">
                                    <i class="bi bi-folder-symlink"></i>Members</a>
                            </li>                  
                            <li class="nav-item p-2">
                                <a class="nav-link text-dark" asp-action="Index" asp-controller="Department">
                                    <i class="bi bi-folder-symlink"></i>Departments</a>
                            </li>
                            <li class="nav-item p-2 ">
                                <a class="nav-link text-dark" asp-action="Index" asp-controller="Role">
                                    <i class="bi bi-folder-symlink"></i>Roles</a>
                            </li><hr class="text-secondary"/>
                            <li class="nav-item p-2 mt-5 gap-3 text-center bg-secondary rounded-pill">
                                <a class="nav-link text-dark "asp-controller="Administrator" asp-action="Logout">
                                    <i class="bi bi-box-arrow-left"></i>Logout</a>
                            </li>
                        </ul> 
                    </div>
                </div>
              </nav>
          </div>
        </div> 
        <div class="col-9 justify-content-start">
            <div class="container bg-secondary h-100">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div> 
     </div>
    }
    else
    {
        <div class="col-12 justify-content-start">
            <div class="container bg-secondary h-100">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div> 
    }
    
    <footer class="border-top footer text-muted">
        <div class="container text-dark">
            &copy; 2022 - EmployeeDirectoryProject - <a class="text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
